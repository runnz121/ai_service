        "type": "integer"
      },
      "status": {
        "type": "keyword"
      },
      "rating": {
        "type": "double"
      },
      "reviewCount": {
        "type": "integer"
      },
      "description": {
        "type": "text",
        "analyzer": "nori"
      },
      "longDescription": {
        "type": "text",
        "analyzer": "nori"
      },
